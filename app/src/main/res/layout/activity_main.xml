<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@mipmap/box_only"
        android:contentDescription="Udatabox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="UDATABOX®"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="190dp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:id="@+id/form">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/contentlogin">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/et_usuario"
                android:hint="Usuario"
                android:visibility="visible" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:hint="Contraseña"
                android:id="@+id/et_contrasena"
                android:layout_marginTop="10dp"
                android:visibility="visible" />

            <Button
                android:layout_width="127dp"
                android:layout_height="44dp"
                android:id="@+id/b_login"
                android:layout_gravity="center_horizontal"
                android:text="Ingresar"
                android:layout_marginTop="10dp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tw_errorlogin"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffff1100"
                android:layout_marginTop="20dp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="No puede acceder a tu cuenta."
                android:id="@+id/tw_RecuperarContraseña"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>

